@page "/editanphuoc/{id}"
@page "/editanphuoc"
@inherits EditAnPhuocBase

<EditForm Model="@AnPhuoc" OnValidSubmit="HandleValidSubmit">
    <hr />
    <div class="form-group row">
        <label for="Tensp" class="col-sm-2 col-form-label">Tên sản phẩm:</label>
    </div>
    <div class="col-sm-10">
        <InputText id="Tensp" class="form-control" placeholder="Tensp"
                   @bind-Value="AnPhuoc.Tensp"></InputText>
    </div>

    <div class="form-group row">
        <label for="Hoatiet" class="col-sm-2 col-form-label">Họa tiết:</label>
    </div>
    <div class="col-sm-10">
        <InputText id="Hoatiet" class="form-control" placeholder="Hoatiet"
                   @bind-Value="AnPhuoc.Hoatiet"></InputText>
    </div>

    <div class="form-group row">
        <label for="Gia" class="col-sm-2 col-form-label">Giá:</label>
    </div>
    <div class="col-sm-10">
        <InputText id="Gia" class="form-control" placeholder="Gia"
                   @bind-Value="AnPhuoc.Gia "></InputText>
    </div>

    <div class="form-group row">
        <label for="Thongtin" class="col-sm-2 col-form-label">Thông tin:</label>
    </div>
    <div class="col-sm-10">
        <InputText id="Thongtin" class="form-control" placeholder="Thongtin"
                   @bind-Value="AnPhuoc.Thongtin "></InputText>
    </div>

    <div class="form-group row">
        <label for="loaisp" class="col-sm-2 col-form-label">Loại sản phẩm:</label>
    </div>
    @if (Loaisps == null)
    {
        <div class="spinner"></div>
    }
    else
    {
        <div class="col-sm-10">
            <CustomInputSelect id="loaisp" @bind-Value="AnPhuoc.LoaispId">
                @foreach (var loai in Loaisps)
                    {
                    <option value="@loai.LoaispId">@loai.LoaispName</option>
                    }
            </CustomInputSelect>
        </div>
    }

    <div class="form-group row">
        <label for="Hinhanh" class="col-sm-2 col-form-label">Hình ảnh:</label>
    </div>
    <div class="col-sm-10">
        <InputText id="Hinhanh" class="form-control" placeholder="Hinhanh"
                   @bind-Value="AnPhuoc.Hinhanh "></InputText>
    </div>
    <br />
    <button class="btn btn-primary" type="submit">Submit</button>
    <button class="btn btn-danger m-1" @onclick="Delete_Click"> Delete </button>
</EditForm>